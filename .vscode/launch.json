  "version": "0.2.0",

    "inputs": [
      {
          "id": "argPrompt",
          "description": "CLI arguments",
          "default": "",
          "type": "promptString"
      }
  ],

  "configurations": [
    {
      "name": "Run npm start",
      "command": "npm test ${input:argPrompt}",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "name": "Launch Program",
      "program": "${workspaceFolder}/${relativeFile}",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    }

  ]
}